name: Data Loader Component
description: Load and split datasets from files or URLs
inputs:
  - {name: data_path, type: String, optional: true, description: 'Path to input file'}
  - {name: data_url, type: String, optional: true, description: 'URL to input file'}
  - {name: val_size, type: Number, default: 0.2, description: 'Validation split size'}
  - {name: output_format, type: String, default: 'csv', description: 'Output format (csv/json/parquet)'}
outputs:
  - {name: train_data, type: String}
  - {name: val_data, type: String}
  - {name: metadata, type: String}
implementation:
  container:
    image: nikhilv215/data_loader:latest
    command: [python]
    args: [
      'dl_f.py',
      '--_output_paths', {outputPath: train_data}, {outputPath: val_data}, {outputPath: metadata},
      '?--data-path', {inputValue: data_path},
      '?--data-url', {inputValue: data_url},
      '--val-size', {inputValue: val_size},
      '--output-format', {inputValue: output_format}
    ]
